

<h2>Games</h2>

<a id="create_game_link" href="/games/new">Create New Game</a>

<p>---------------------------------------------------------------------</p>

<% Game.order(:name).all.each do |g| %>

  <a href="/games/<%= g.id %>"><h4><%= g.name %></h4></a>

  <p><%= g.summary %></p>

  <p style="font-weight: bold;"><%= g.publisher.name %>, <%= g.year_published %> </p>

  <p>***********************************************</p>

<% end %>