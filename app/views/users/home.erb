
<h2>Home Page for:</h2>
<h2><%= @user.username %></h2>

<h4> <%= @user.title %> </h4>

<p style="font-weight: bold;">Bio:</p>

<p> <%= @user.bio %> </p>

<br>

<p>===============================================================================================</p>

<h3><%= @user.username%>'s Games:</h3>

<% @user.games.order(:name).each do |g| %>

  <h4><%= g.name %></h4>

  <p><%= g.summary %></p>

  <p style="font-weight: bold;"><%= g.publisher.name %>, <%= g.year_published %> </p>

  <p>***********************************************</p>

<% end %>